<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <!-- Header section modification -->
        <referenceBlock name="logo">
            <arguments>
                <argument name="logo_file" xsi:type="string">images/assets/rutavity-ch.png</argument>
                <argument name="logo_width" xsi:type="number">190</argument>
                <argument name="logo_height" xsi:type="number">42</argument>
                <argument name="logo_alt" xsi:type="string">Rutavity</argument>
            </arguments>
        </referenceBlock>
        <referenceContainer name="header.panel">
            <block class="Magento\Framework\View\Element\Template" name="mini-logos" template="Magento_Theme::html/mini-logos.phtml" before="-">
                <arguments>
                    <argument name="logo_file" xsi:type="string">images/assets/logos-ch.png</argument>
                    <argument name="logo_alt" translate="true" xsi:type="string">Mini logos</argument>
                </arguments>
            </block>
        </referenceContainer>
        <referenceBlock name="register-link" remove="true"/>
        <move element="navigation.sections" destination="header-wrapper" after="logo"/>
        <move element="minicart" destination="header.panel" before="top.links"/>
        <move element="compare-link-wrapper" destination="header.panel" after="mini-logos"/>
    </body>
</page>
